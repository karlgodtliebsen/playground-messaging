    <Shell.FlyoutHeader>
        <Grid BackgroundColor="#1E88E5" Padding="20" HeightRequest="150">
            <VerticalStackLayout VerticalOptions="Center">
                <Label Text="ðŸ“Š Prometheus" 
                       FontSize="24" 
                       FontAttributes="Bold"
                       TextColor="White"/>
                <Label Text="Metrics Viewer" 
                       FontSize="18" 
                       TextColor="White"
                       Opacity="0.8"/>
                <Label Text="Messaging Platform" 
                       FontSize="12" 
                       TextColor="White"
                       Opacity="0.6"
                       Margin="0,10,0,0"/>
            </VerticalStackLayout>
        </Grid>
    </Shell.FlyoutHeader>

    <FlyoutItem Title="Dashboard" Icon="{StaticResource IconDashboard}">
        <ShellContent
            Title="Overview"
            ContentTemplate="{DataTemplate pages:DashboardPage}"
            Route="dashboard" />
    </FlyoutItem>

    <FlyoutItem Title="EventHub Metrics" Icon="{StaticResource IconProjects}">
        <ShellContent
            Title="EventHub Metrics"
            ContentTemplate="{DataTemplate pages:EventHubDetailPage}"
            Route="eventhub" />
    </FlyoutItem>

    <FlyoutItem Title="System Metrics" Icon="{StaticResource IconMeta}">
        <ShellContent
            Title="System Performance Metrics"
            ContentTemplate="{DataTemplate pages:SystemMetricsPage}"
            Route="system" />
    </FlyoutItem>
    <FlyoutItem Title="Settings" Icon="{StaticResource IconMeta}">
        <ShellContent
            Title="Settings"
            ContentTemplate="{DataTemplate pages:SettingsPage}"
            Route="settings" />
    </FlyoutItem>


    <Shell.FlyoutFooter>
        <Grid Padding="10">
            <controls:ThemeToggle x:Name="ThemeToggle"
                                  
                                  SelectionChanged="OnThemeSelectionChanged"
                                  VerticalOptions="Center"
                                  HorizontalOptions="End"/>

        </Grid>
    </Shell.FlyoutFooter>

</Shell>
