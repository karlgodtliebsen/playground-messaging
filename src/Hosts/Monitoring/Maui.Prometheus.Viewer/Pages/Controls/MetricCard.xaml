<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:Maui.Prometheus.Viewer.Pages.Controls"
             x:Class="Maui.Prometheus.Viewer.Pages.Controls.MetricCard"
             x:DataType="controls:MetricCard"
             x:Name="root"
             >
    <Border BackgroundColor="{Binding Source={x:Reference root},Path=CardColor}"
            Stroke="{Binding Source={x:Reference root},Path=CardColor}"
            StrokeThickness="0"
            Padding="15">
        <Border.StrokeShape>
            <RoundRectangle CornerRadius="8"/>
        </Border.StrokeShape>

        <Border.Shadow>
            <Shadow Brush="Black"
                    Opacity="0.2"
                    Radius="8"
                    Offset="0,2"/>
        </Border.Shadow>

        <VerticalStackLayout Spacing="5">
            <Label Text="{Binding Source={x:Reference root},Path=Title}" 
                   FontSize="12" 
                   TextColor="White"
                   Opacity="0.9"/>
            <Label Text="{Binding Source={x:Reference root},Path=Value}" 
                   FontSize="28" 
                   FontAttributes="Bold" 
                   TextColor="White"/>
            <Label Text="{Binding Source={x:Reference root},Path=Unit}" 
                   FontSize="11" 
                   TextColor="White" 
                   Opacity="0.8"/>
        </VerticalStackLayout>
    </Border>

</ContentView>
