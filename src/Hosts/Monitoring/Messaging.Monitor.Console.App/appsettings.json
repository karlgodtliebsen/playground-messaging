{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Wolverine": "Information"
    }
  },
  "ApplicationInformation": {
    "ApplicationName": "messaging.console.kafka.producer.app",
    "ServiceName": "messaging-producer",
    "ServiceNamespace": "messaging",
    "ApplicationVersion": "1.0.0",
    "InstanceId": "producer-01"
  },
  "OpenTelemetry": {
    "ServiceName": "messaging-producer",
    "ServiceVersion": "1.0.0",
    "Endpoint": "http://localhost:4317",
    "UseGrpc": true,
    "ExportTraces": true,
    "ExportMetrics": true,
    "ExportLogs": true,
    "SamplingRatio": 1.0,
    "DebugMode": true,
    "AspNetCore": false,
    "HttpClient": false,
    "SqlClient": false,
    "Runtime": true,
    "Process": true,
    "Sources": [ "messaging.console.kafka.producer.app", "Wolverine" ],
    "Meters": [ "messaging.console.kafka.producer.app", "EventHub", "Wolverine", "Wolverine.Runtime" ]
  },
  "EventHubOptions": {
    "EnableMetrics": true,
    "MetricsName": "EventHub",
    "EnableUseChannel": false,
    "FireAndCollectHandlers": false
  },
  "KafkaOptions": {
    "BootstrapServers": "localhost:9094",
    "HostName": "127.0.0.1",
    "Port": 9094
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.Seq" ],
    "MinimumLevel": {
      "Default": "Verbose"
    },
    "Enrich": [ "FromLogContext", "WithMachineName", "WithSpan", "WithThreadId" ],
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] ({Application}/{MachineName}/{ThreadId}/{TraceId}/{SpanId}) {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "Seq",
        "Args": {
          "serverUrl": "http://localhost:5341"
        }
      }
    ],
    "Properties": {
      "Application": "Messaging.Console.Kafka.Producer.App"
    }
  }
}