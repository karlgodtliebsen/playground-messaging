{
  "Logging": {
    "LogLevel": {
      "Default": "Trace",
      "Wolverine": "Trace"
    }
  },
  "KafkaOptions": {
    "HostName": "127.0.0.1",
    "Port": 9094,
    "ConsumerGroup": "my-consumer-group",
    "ClientId": "the-client_id"
  },
  "MemoryMapped": {
    "Name": "memory_mapped_file_kafka"
  },
  "DatabaseConnection_SqLite": {
    "ConnectionString": "/var/logs/kafka.messages.db"
  },
  "DatabaseConnection_MsSql": {
    "ConnectionString": "Server=.;Database=MessageDemo;Persist Security Info=True;Encrypt=False;Trusted_Connection=True;Pooling=false;"
  },
  "DatabaseConnection_PostgreSql": {
    "ConnectionString": "-set using TestContainer-"
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Verbose"
    },
    "Enrich": [ "FromLogContext", "WithMachineName", "WithSpan", "WithThreadId" ],
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] ({Application}/{MachineName}/{ThreadId}/{TraceId}/{SpanId}) {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "/var/logs/messaging.kafka.console.app..log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 2,
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] ({Application}/{MachineName}/{ThreadId}/{TraceId}/{SpanId}) {Message:lj}{NewLine}{Exception}",
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact"
        }
      }
    ],
    "Properties": {
      "Application": "Messaging.KafkaConsole.App"
    }
  }
}